@model CkApp.Web.Models.Ordering.MOrderList
@{
    ViewBag.Title = "index";
}

<div class="pageheader">
    <h2><i class="fa fa-table"></i> @ViewBag.ModuleTitle <span>@ViewBag.HeadTitle</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">Buradasınız:</span>
        <ol class="breadcrumb">
            <li><a href="/">Anasayfa</a></li>
            <li class="active">@ViewBag.ModuleTitle</li>
        </ol>
    </div>
</div>

<div class="contentpanel">

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-btns">
                <a href="#" class="minimize">&minus;</a>
            </div><!-- panel-btns -->
            <h3 class="panel-title">Filtreler</h3>
            <p>...</p>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>Sipariş No</th>
                            <th>Gönderen Firma</th>
                            <th>Firma Yetkilisi</th>
                            <th>Sipariş Durumu</th>
                            <th>Gönderme Tarihi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AllOrders)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.Company.Title</td>
                                <td>@item.Person.Firstname @item.Person.Lastname</td>
                                <td>@item.OrderState.Title</td>
                                <td>@((item.CreationDate != null) ? ((DateTime)item.CreationDate).ToString("dd.MM.yyyy HH:mm") : "")</td>
                                <td>
                                    <a href="/order/details/@item.OrderId" class="btn btn-info">
                                        Detaylar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>