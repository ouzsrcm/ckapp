@model Library.Company
<form action="/dealer/saveinfo/@Model.CompanyId" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-sm-4">Başlık</label>
        <div class="col-sm-8">
            <input type="text" name="Title" value="@Model.Title" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4">Eposta</label>
        <div class="col-sm-8">
            <input type="text" name="Email" value="@Model.Email" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4">Telefon</label>
        <div class="col-sm-8">
            <input type="text" name="Gsm" value="@Model.Gsm" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4">Adres</label>
        <div class="col-sm-8">
            <input type="text" name="Address" value="@Model.Address" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4">Vergi Bilgileri</label>
        <div class="col-sm-8">
            <input type="text" name="TaxInformation" value="@Model.TaxInformation" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4">Vergi Numarası</label>
        <div class="col-sm-8">
            <input type="text" name="TaxNumber" value="@Model.TaxNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="submit" name="btnSave" value="Kaydet" class="btn btn-primary pull-right" />
            <div class="clearfix"></div>
        </div>
    </div>
</form>