@model CkApp.Web.Models.Authentication.MLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/assets/images/favicon.png" type="image/png">
    <title>Kullanıcı Yetkilendirme</title>
    <link href="/assets/css/style.default.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="/assets/js/html5shiv.js"></script>
    <script src="/assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="signin">
    <!-- Preloader -->
    <div id="preloader">
        <div id="status"><i class="fa fa-spinner fa-spin"></i></div>
    </div>
    <section>

        <div class="signinpanel">

            <div class="row">

                <div class="col-md-7">

                    <div class="signin-info">
                        <div class="logopanel">
                            <h1><span>[</span> Çelik Kapı Sipariş <span>]</span></h1>
                        </div><!-- logopanel -->

                        <div class="mb20"></div>

                        <h5><strong>Hoşgeldiniz!</strong></h5>
                        <ul>
                            <li><i class="fa fa-arrow-circle-o-right mr5"></i> Lütfen bilgilerinizle giriş yapın.</li>
                        </ul>
                        <div class="mb20"></div>
                    </div><!-- signin0-info -->

                </div><!-- col-sm-7 -->

                <div class="col-md-5">

                    <form method="post" action="/login">
                        @Html.AntiForgeryToken()
                        <h4 class="nomargin">Giriş yap</h4>
                        <p class="mt5 mb20">bilgilerinizi girin.</p>

                        <input type="text" class="form-control uname" name="Username" value="os" placeholder="Kullanıcı Adı" />
                        <input type="password" class="form-control pword" name="Password" value="123" placeholder="Parola" />
                        <a href="/login/recovery"><small>Parolamı unuttum!</small></a>
                        <button type="submit" class="btn btn-success btn-block">Giriş yap</button>
                    </form>

                    @try
                    {
                        if (Model.Warning.Status == true)
                        {
                            <div class="alert alert-@Model.Warning.Css">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @Model.Warning.Body
                            </div>
                        }
                    }
                    catch {  }

                </div><!-- col-sm-5 -->

            </div><!-- row -->

            <div class="signup-footer">
                <div class="pull-left">
                    &copy; @DateTime.Now.Year.ToString(). Bütün hakları saklıdır.
                </div>
                <div class="pull-right">
                    Powered By: <a href="#" target="_blank">C#ylaklar</a>
                </div>
            </div>

        </div><!-- signin -->

    </section>

    <script src="/assets/js/jquery-1.10.2.min.js"></script>
    <script src="/assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/modernizr.min.js"></script>
    <script src="/assets/js/retina.min.js"></script>
    <script src="/assets/js/custom.js"></script>
</body>
</html>
